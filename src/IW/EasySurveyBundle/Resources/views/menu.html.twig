                  <li><a href="{{ path('iw_easy_survey_create_quiz')}}">Nueva encuesta</a></li>
                  <li><a href="{{ path('iw_easy_survey_manage_quiz',{'id': -1})}}">Gestionar encuestas</a></li>
                  <li class="divider"></li>
