{% extends "IWEasySurveyBundle::layout.html.twig" %}
{% block content %}
      <div class="page-header">          
          <h1>Respuesta de la encuesta</h1>
      </div>  
      <div class="page-content">  
          <table id="datetable">
            <thead>
              <tr>
                <th>Id</th>
                <th>Pregunta</th>
                <th>Tipo</th>
                <th>Respuestas</th>
              </tr>
            </thead>
          <tbody>
              {% for data in values %}
                  <tr>
                      <td> {{data.id}} </td>
                      <td> {{data.question}} </td>
                      <td> {{data.type}} </td>
                      <td> 
                          {% if data.idType < 2 %}
                            {{data.body}} 
                          {% else %}
                                {% for aux in data.body %}
                                    {{aux.text}} <br>
                                {% endfor %}                            
                          {% endif %}
                      </td>
                  </tr>
              {% endfor %}
          </tbody>
        </table>
          
         <a href="{{ path('iw_easy_survey_generater_csv', {'id': id})}}"> {% trans %}Exportar a CSV{% endtrans %} </a>
      </div>  
{% endblock %}